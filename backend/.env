NODE_ENV=production
PORT=5000
HTTPS_PORT=443

# Database (Use MongoDB Atlas or secured instance)
MONGODB_URI=mongodb://localhost:27017/asistenguru

# JWT Security (Generate strong secrets)
JWT_SECRET=asistenguru_jwt_secret_key_here_at_least_32_characters_long
JWT_REFRESH_SECRET=asistenguru_jwt_refresh_secret_key_here_at_least_32_characters_long
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google Auth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=https://localhost:5000/auth/google/callback

# Security
SESSION_SECRET=asistenguru_session_secret_key_here_at_least_32_characters_long
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# SSL/TLS (For local development, these won't be used)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key